<div class="p-2">

    {{#if result.display_form}}
    <form action="/competitions/add" method="post" class="flex flex col gap-2">
        <div class="pb-2 flex flex-col">
            <label>Naziv</label>
            <Input type="text" name="name" class="bg-neutral" required="" minlength="3" maxlength="50">
        </div>
        <div class="pb-2 flex flex-col">
            <label>Opis</label>
            <textarea name="Description" class="bg-neutral" rows="10" required="" minlength="3"> </textarea>
        </div>
        <div class="pb-2 flex flex-col">
            <label>Rok prijave</label>
            <Input type="datatime-local" name="apply_till" class="bg-neutral" required=""></textarea>
        </div>
        {{> form_buttons }}
    </form>
    {{/if}}

    {{#if result.validation_error}}
    {{>validation_error}}

    {{/if}}

    {{#if result.database_error}}
    {{>database_error}}

    {{/if}}

    {{#if result.success}}
    <div class="mt-4">
        <div class="card w-96 bg-primary text-primary-content">
            <div class="card-body">
                <h2 class="card-title">Uspjeh!</h2>
                <p>
                    Uspješno ste se prijavili, možete nastaviti s radom!
                </p>
                <div class="card-actions justify-end">
                    <a class="btn" href="/">Nastavi na naslovnicu</a>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>